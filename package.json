    "@types/node": "^13.7.0",
    "@types/ora": "^3.1.0",
    "@types/sharp": "^0.23.0",
    "@types/signale": "^1.2.1",
    "colors": "^1.3.2",
    "coveralls": "^3.0.2",
    "cross-env": "^6.0.3",
    "husky": "^3.0.5",
